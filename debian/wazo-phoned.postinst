#! /bin/sh

set -e

LOG_FILENAME='/var/log/wazo-phoned.log'
DAEMONNAME='wazo-phoned'

case "$1" in
    configure)
        # move files from xivo-dird-phoned
        if [ -f /var/log/xivo-dird-phoned.log ] ; then
            rename 's/xivo-dird-phoned/wazo-phoned/g' /var/log/xivo-dird-phoned.log*
            # Fix a previous version where the wazo-dird-phoned.log was created before renaming
            rm -f /var/log/xivo-dird-phoned.log
        fi
        # End of move files from xivo-dird-phoned

        # move files from wazo-dird-phoned
        rm -rf /run/wazo-dird-phoned
        if [ -f /var/log/wazo-dird-phoned.log ] ; then
            rename 's/wazo-dird-phoned/wazo-phoned/g' /var/log/wazo-dird-phoned.log*
        fi
        if [ -f /etc/wazo-dird-phoned/conf.d/050-xivo-config.yml ] ; then
            sed -e 's/dird-phoned/phoned/g' -i /etc/wazo-dird-phoned/conf.d/050-xivo-config.yml
        fi
        if [ -d /etc/wazo-dird-phoned/conf.d ] ; then
            find /etc/wazo-dird-phoned/conf.d/ -mindepth 1 -exec mv {} /etc/wazo-phoned/conf.d/ \;
            rmdir --ignore-fail-on-non-empty -p /etc/wazo-dird-phoned/conf.d
        fi
        # End of move files from wazo-dird-phoned

        if dpkg --compare-versions "${previous_version}" lt '20.07'; then
            ln -sf /etc/nginx/locations/https-available/$DAEMONNAME \
                   /etc/nginx/locations/https-enabled/$DAEMONNAME
            ln -sf /etc/nginx/locations/http-available/$DAEMONNAME \
                   /etc/nginx/locations/http-enabled/$DAEMONNAME
        fi

        if [ ! -e "$LOG_FILENAME" ]; then
            touch "$LOG_FILENAME"
        fi
        chown www-data: "$LOG_FILENAME"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
